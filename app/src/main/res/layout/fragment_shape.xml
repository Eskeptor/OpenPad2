<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/frag_shape_circle"
        android:layout_width="@dimen/text_tools_button"
        android:layout_height="@dimen/text_tools_button"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_circle_black_24dp" />

    <ImageButton
        android:id="@+id/frag_shape_rectangle"
        android:layout_width="@dimen/text_tools_button"
        android:layout_height="@dimen/text_tools_button"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_rectangle_black_24dp" />
</LinearLayout>